<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.examReport.ExamReportActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Spinner
        android:id="@+id/classCode"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:entries="@android:array/imProtocols" />
    <Spinner
        android:id="@+id/subjectCode"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:entries="@android:array/emailAddressTypes" />
    <Spinner
        android:id="@+id/examType"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:entries="@android:array/organizationTypes" />
</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>